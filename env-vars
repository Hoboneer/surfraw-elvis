# Environment variables used for building elvi.
# Can be sourced or included in shell scripts and makefiles.

# Directory for `mkelvis` input files.
export SRCDIR=src
# Directory for `mkelvis` output files.
export ELVI_DIR=elvi
# Directory for non-elvi-input data files needed to build
export GEN_DATA_DIR=gen-data
export GEN_SCRIPTS_DIR=gen-scripts
export GEN_LIBS_DIR=gen-libs
# Directory for submakefiles (to be included)
export INCLUDE_DIR=mk
export MANUAL_ELVI_DIR=manual-elvi
